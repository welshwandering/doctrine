# EditorConfig - https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.py]
indent_size = 4
max_line_length = 100

[*.rb]
indent_size = 2
max_line_length = 100

[*.go]
indent_style = tab
indent_size = 4

[*.rs]
indent_size = 4
max_line_length = 100

[*.cs]
indent_size = 4
max_line_length = 100

[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

[*.{html,css,scss,less}]
indent_size = 2

[*.{json,yaml,yml,toml}]
indent_size = 2

[*.md]
indent_size = 4
max_line_length = 80
trim_trailing_whitespace = false

[*.sh]
indent_size = 2
max_line_length = 80

[*.sql]
indent_size = 2
max_line_length = 80

[Makefile]
indent_style = tab

[Dockerfile*]
indent_size = 4

[.git*]
indent_size = 4
