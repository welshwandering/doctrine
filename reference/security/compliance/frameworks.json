      "technical_controls": ["Unique user identification", "Automatic logoff", "Encryption and decryption", "Audit controls and logging", "Integrity controls", "Person or entity authentication", "Transmission security"],
      "no_certification": "No official HIPAA certification exists - only attestations"
    },
    "pci_dss": {
      "name": "Payment Card Industry Data Security Standard 4.0",
      "authority": "PCI Security Standards Council",
      "version": "4.0",
      "scope": "Payment card data",
      "geography": "Global",
      "priority": "CRITICAL (if handling payments)",
      "effective": "2024-03-31",
      "applies_to": "Organizations that store, process, or transmit cardholder data",
      "requirements": [
        {"id": 1, "name": "Install and Maintain Network Security Controls", "key_items": ["Firewalls", "Network segmentation", "Change management"]},
        {"id": 2, "name": "Apply Secure Configurations", "key_items": ["No vendor defaults", "Hardening standards", "System inventory"]},
        {"id": 3, "name": "Protect Stored Account Data", "key_items": ["Data retention policies", "PAN masking", "Encryption", "Key management"]},
        {"id": 4, "name": "Protect Cardholder Data with Strong Cryptography During Transmission", "key_items": ["TLS 1.2+", "Strong cipher suites", "Certificate validation"]},
        {"id": 5, "name": "Protect All Systems and Networks from Malicious Software", "key_items": ["Anti-malware", "Periodic scans", "Phishing protection"]},
        {"id": 6, "name": "Develop and Maintain Secure Systems and Software", "key_items": ["Secure SDLC", "Vulnerability management", "Change control", "WAF"]},
        {"id": 7, "name": "Restrict Access by Business Need to Know", "key_items": ["Access control policy", "RBAC", "Privileged access management"]},
        {"id": 8, "name": "Identify Users and Authenticate Access", "key_items": ["Unique IDs", "MFA", "Password policies", "Session management"]},
        {"id": 9, "name": "Restrict Physical Access to Cardholder Data", "key_items": ["Physical access controls", "Visitor management", "Media controls"]},
        {"id": 10, "name": "Log and Monitor All Access", "key_items": ["Audit logging", "Log review", "Time synchronization", "Alerting"]},
        {"id": 11, "name": "Test Security of Systems and Networks Regularly", "key_items": ["Vulnerability scanning", "Penetration testing", "File integrity monitoring"]},
        {"id": 12, "name": "Support Information Security with Organizational Policies", "key_items": ["Security policy", "Risk assessment", "Incident response", "Security awareness"]}
      ],
      "new_in_4_0": ["Customized approach option", "Enhanced authentication requirements", "E-commerce and phishing protections", "Targeted risk analysis", "Service provider clarifications"],
      "compliance_levels": {
        "level_1": "6M+ transactions annually - Annual ROC by QSA",
        "level_2": "1-6M transactions - Annual SAQ",
        "level_3": "20K-1M e-commerce transactions - Annual SAQ",
        "level_4": "<20K e-commerce or <1M other - Annual SAQ"
