  "frameworks": {
    "gdpr": {
      "name": "General Data Protection Regulation",
      "authority": "European Union",
      "scope": "Personal data of EU residents",
      "geography": "EU + any company processing EU data",
      "priority": "CRITICAL",
      "effective": "2018-05-25",
      "applies_to": "Organizations processing EU resident data",
      "key_articles": [
        {
          "article": "Art. 5",
          "name": "Principles of Processing",
          "requirements": ["Lawfulness, fairness, transparency", "Purpose limitation", "Data minimization", "Accuracy", "Storage limitation", "Integrity and confidentiality"]
        },
        {
          "article": "Art. 6",
          "name": "Lawful Basis for Processing",
          "bases": ["Consent", "Contract", "Legal obligation", "Vital interests", "Public task", "Legitimate interests"]
        },
        {
          "article": "Art. 17",
          "name": "Right to Erasure",
          "requirements": ["Right to be forgotten", "Erasure without undue delay"]
        },
        {
          "article": "Art. 20",
          "name": "Data Portability",
          "requirements": ["Machine-readable format", "Right to transmit to another controller"]
        },
        {
          "article": "Art. 25",
          "name": "Data Protection by Design and Default",
          "requirements": ["Privacy by design", "Privacy by default", "Pseudonymization", "Minimization"]
        },
        {
          "article": "Art. 32",
          "name": "Security of Processing",
          "requirements": ["Encryption", "Confidentiality", "Integrity", "Availability", "Resilience", "Regular testing"]
        },
        {
          "article": "Art. 33",
          "name": "Breach Notification",
          "requirements": ["Notify authority within 72 hours", "Document all breaches"]
        },
        {
          "article": "Art. 35",
          "name": "Data Protection Impact Assessment",
          "requirements": ["Required for high-risk processing", "Systematic description", "Necessity assessment", "Risk assessment"]
        }
      ],
      "data_subject_rights": ["Right to access", "Right to rectification", "Right to erasure", "Right to data portability", "Right to object"],
      "penalties": {
        "tier_1": "Up to €10M or 2% global turnover",
        "tier_2": "Up to €20M or 4% global turnover"
      },
      "technical_controls": ["Encryption of personal data", "Access controls and logging", "Data retention policies", "Consent management", "Privacy impact assessments", "Breach detection and response"]
    },
    "hipaa": {
      "name": "Health Insurance Portability and Accountability Act",
      "authority": "HHS (US Dept of Health & Human Services)",
      "scope": "Protected Health Information (PHI)",
      "geography": "United States",
      "priority": "CRITICAL (if handling health data)",
      "applies_to": "Healthcare providers, health plans, healthcare clearinghouses, business associates",
      "rules": {
        "privacy_rule": {
          "description": "Standards for PHI protection",
          "key_requirements": ["Minimum necessary standard", "Patient rights (access, amendment, accounting)", "Notice of Privacy Practices", "Authorization requirements"]
        },
        "security_rule": {
          "description": "Standards for ePHI protection",
          "safeguards": {
            "administrative": ["Security management process", "Workforce security", "Information access management", "Security awareness training", "Contingency planning"],
            "physical": ["Facility access controls", "Workstation security", "Device and media controls"],
            "technical": ["Access controls", "Audit controls", "Integrity controls", "Transmission security"]
          }
        },
        "breach_notification": {
          "description": "Requirements for breach reporting",
          "requirements": ["Individual notification within 60 days", "HHS notification", "Media notification for breaches >500"]
        }
      },
      "penalties": {
        "tier_1": "$137-$68,928 per violation (unknowing)",
        "tier_2": "$1,379-$68,928 per violation (reasonable cause)",
        "tier_3": "$13,785-$68,928 per violation (willful neglect, corrected)",
        "tier_4": "$68,928-$2,067,813 per violation (willful neglect, not corrected)"
