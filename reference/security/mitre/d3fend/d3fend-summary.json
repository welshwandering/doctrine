  "taxonomy": {
    "description": "Hierarchical organization of defensive techniques",
    "top_level_tactics": [
      {
        "id": "D3-HAR",
        "name": "Harden",
        "description": "Techniques to make systems more resistant to attack",
        "techniques": [
          "Application Configuration Hardening",
          "Credential Hardening",
          "Message Hardening",
          "Platform Hardening",
          "User Behavior Hardening"
        ]
      },
      {
        "id": "D3-DET",
        "name": "Detect",
        "description": "Techniques to identify malicious activity",
        "techniques": [
          "File Analysis",
          "Identifier Analysis",
          "Message Analysis",
          "Network Traffic Analysis",
          "Platform Monitoring",
          "Process Analysis",
          "User Behavior Analysis"
        ]
      },
      {
        "id": "D3-ISO",
        "name": "Isolate",
        "description": "Techniques to separate and contain threats",
        "techniques": [
          "Execution Isolation",
          "Network Isolation"
        ]
      },
      {
        "id": "D3-DEC",
        "name": "Deceive",
        "description": "Techniques using deception to detect or misdirect attackers",
        "techniques": [
          "Decoy Environment",
          "Decoy Object"
        ]
      },
      {
        "id": "D3-EVT",
        "name": "Evict",
        "description": "Techniques to remove threats from the environment",
        "techniques": [
          "Credential Eviction",
          "File Eviction",
          "Process Eviction"
        ]
      }
    ]
  },
  "key_techniques": {
    "harden": [
      {
        "id": "D3-ACH",
        "name": "Application Configuration Hardening",
        "description": "Modifying application configuration to reduce attack surface",
        "examples": ["Disable macros", "Restrict script execution", "Remove unnecessary features"],
        "counters_attack": ["T1059", "T1204", "T1566"]
      },
      {
        "id": "D3-CH",
        "name": "Credential Hardening",
        "description": "Strengthening credential-related defenses",
        "examples": ["MFA enforcement", "Password policies", "Credential rotation"],
        "counters_attack": ["T1110", "T1078", "T1556"]
      },
      {
        "id": "D3-PSEP",
        "name": "Process Segment Execution Prevention",
        "description": "Preventing execution in memory regions",
        "examples": ["DEP/NX bit", "ASLR", "CFI"],
        "counters_attack": ["T1055", "T1203", "T1574"]
      },
      {
        "id": "D3-NI",
        "name": "Network Isolation",
        "description": "Segmenting network to limit lateral movement",
        "examples": ["Micro-segmentation", "VLANs", "Zero trust architecture"],
        "counters_attack": ["T1021", "T1570", "T1071"]
      }
    ],
